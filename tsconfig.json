{
  "exclude": ["vite.config.ts", "**/*.stories.tsx", "**/*.stories.ts"],
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true
  }
}
